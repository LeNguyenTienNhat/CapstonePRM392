<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingHorizontal="5dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/back"
                style="@style/bar_component"
                android:contentDescription="@string/back"
                android:layout_marginStart="15dp"
                android:src="@drawable/arrow_back"/>

            <ImageButton
                android:id="@+id/cart"
                style="@style/bar_component"
                android:contentDescription="@string/menu"
                android:src="@drawable/cart"
                android:layout_marginStart="315dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/thumbnail_content_des"
            android:src="@drawable/thumb" />

        <TextView
            android:id="@+id/label"
            style="@style/detail_text_view"
            android:text="STV-380"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/price"
            android:text="200 USD"
            android:textColor="#8E8E8E"
            android:textSize="20sp"
            style="@style/detail_text_view"/>

        <Button
            android:id="@+id/add_to_cart_btn"
            android:text="@string/add_to_cart"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/dark_gray"/>

        <TextView
            android:id="@+id/cart_notice"
            android:text="Added to cart"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:visibility="gone"
            style="@style/detail_text_view"/>

        <TextView
            android:id="@+id/des"
            android:text="@string/des"
            android:layout_marginTop="15dp"
            style="@style/detail_text_view"/>
        <TextView
            android:id="@+id/store"
            android:text="Store: SS0"
            android:layout_marginTop="10dp"
            style="@style/detail_text_view"/>
        <TextView
            android:id="@+id/stock"
            android:text="Stock"
            android:layout_marginTop="10dp"
            style="@style/detail_text_view"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>